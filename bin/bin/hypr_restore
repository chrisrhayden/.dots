#!/usr/bin/env python

from time import sleep
from subprocess import run

layouts = {}

layouts["work"] = [
    ["exec", "kitty"],
    ["layoutmsg", "preselect", "left"],
    ["exec", "kitty"],
    ["layoutmsg", "preselect", "up"],
    ["exec", "firefox"]
]

def hypr_dispatch(args):
    cmd = ["hyprctl", "dispatch"]
    cmd.extend(args)

    out = run(cmd)
    out.check_returncode()

def main():
    for e in layouts["work"]:
        hypr_dispatch(e)
        sleep(.2)


main()
